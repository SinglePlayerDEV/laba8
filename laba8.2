    const int max = 10;
    int N;
    int arr1[max];
    int arr2[max];
    int arr3[max];

    cout << "enter N " << endl;
    cin >> N;

    cout << "Arr 1: ";
    pizda(arr1, max);
    cout << " ==== " << poisk(arr1, max, N) << endl;

    cout << "Arr 2: ";
