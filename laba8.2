#include <iostream> 
#include <ctime> 

using namespace std;

void pizda(int arr[], int max)
{
    for (int i = 0; i < max; i++) {
        arr[i] = rand() % 10;
    }
    for (int i = 0; i < max; i++)
    {
        cout << arr[i] << "\t";
    }
}
int poisk(int arr[], int max, int N)
{
    int counter = 0;
    for (int i = 0; i < max; i++) {
        if (arr[i] == N) {
            counter++;
        }
    }
    return counter;
}
